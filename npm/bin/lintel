#!/usr/bin/env node

const { execFileSync } = require("child_process");
const path = require("path");

const binaryName = process.platform === "win32" ? "lintel.exe" : "lintel";
const binPath = path.join(__dirname, binaryName);

try {
  execFileSync(binPath, process.argv.slice(2), { stdio: "inherit" });
} catch (err) {
  if (err.status != null) {
    process.exit(err.status);
  }
  console.error(`Failed to run lintel: ${err.message}`);
  console.error("Try reinstalling: npm install lintel-rs");
  process.exit(1);
}
